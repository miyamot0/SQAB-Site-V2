{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react",
    "module": "commonjs",
    "outDir": "build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "allowJs": true,
    "types": ["@types/jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["cypress", "**/*.cy.ts", "dist"]
}
